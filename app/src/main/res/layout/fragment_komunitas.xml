<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top|start"
    android:layout_marginStart="8dp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="8dp"
    card_view:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rv_whatsapp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:padding="4dp">

        <ImageView
            android:id="@+id/img_gambar"
            android:layout_width="56dp"
            android:layout_height="54dp"
            android:contentDescription="Deskripsi Gambar"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/add_community"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="282dp"
            android:layout_height="23dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/img_gambar"
            android:text="Komunitas Baru"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.064"
            card_view:layout_constraintStart_toEndOf="@+id/img_gambar"
            card_view:layout_constraintTop_toTopOf="@+id/img_gambar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rv_komunitas"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="75dp"
        android:padding="4dp">

        <ImageView
            android:id="@+id/img_gambar_komunitas"
            android:layout_width="52dp"
            android:layout_height="45dp"
            android:contentDescription="Deskripsi Gambar"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_community"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.0"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/tv_komunitas"
            android:layout_width="282dp"
            android:layout_height="23dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/img_gambar_komunitas"
            android:text="SPM PROJECT"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.311"
            card_view:layout_constraintStart_toEndOf="@+id/img_gambar_komunitas"
            card_view:layout_constraintTop_toTopOf="@+id/img_gambar_komunitas" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rv_pengumuman"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="130dp"
        android:padding="4dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="49dp"
            android:layout_height="19dp"
            android:layout_marginStart="16dp"
            android:text="28/03/24"
            android:textSize="10sp"
            card_view:layout_constraintStart_toEndOf="@+id/tv_nama_pengumuman"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="8dp" />

        <ImageView
            android:id="@+id/img_gambar_pengumuman"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:contentDescription="Deskripsi Gambar"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/pengumuman"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.461"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/tv_nama_pengumuman"
            android:layout_width="235dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/img_gambar_pengumuman"
            android:text="Pengumuman"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.225"
            card_view:layout_constraintStart_toEndOf="@+id/img_gambar_pengumuman"
            card_view:layout_constraintTop_toTopOf="@+id/img_gambar_pengumuman" />

        <TextView
            android:id="@+id/tv_pesan_pengumuman"
            android:layout_width="231dp"
            android:layout_height="21dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/pesan"
            android:textColor="@color/abu"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/img_gambar_pengumuman"
            card_view:layout_constraintEnd_toEndOf="@+id/tv_nama_pengumuman"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/tv_nama_pengumuman"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_nama_pengumuman"
            card_view:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rv_grup1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="190dp"
        android:padding="4dp">

        <TextView
            android:id="@+id/grup1"
            android:layout_width="49dp"
            android:layout_height="19dp"
            android:layout_marginStart="16dp"
            android:text="27/03/24"
            android:textSize="10sp"
            card_view:layout_constraintStart_toEndOf="@+id/tv_nama_grup1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="8dp" />

        <ImageView
            android:id="@+id/img_gambar_grup1"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:contentDescription="Deskripsi Gambar"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_grup"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.461"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/tv_nama_grup1"
            android:layout_width="235dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/img_gambar_grup1"
            android:text="SPM Team 2"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.225"
            card_view:layout_constraintStart_toEndOf="@+id/img_gambar_grup1"
            card_view:layout_constraintTop_toTopOf="@+id/img_gambar_grup1" />

        <TextView
            android:id="@+id/tv_pesan_grup1"
            android:layout_width="231dp"
            android:layout_height="21dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/pesan"
            android:textColor="@color/abu"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/img_gambar_grup1"
            card_view:layout_constraintEnd_toEndOf="@+id/tv_nama_grup1"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/tv_nama_grup1"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_nama_grup1"
            card_view:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rv_grup2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="260dp"
        android:padding="4dp">

        <TextView
            android:id="@+id/grup2"
            android:layout_width="49dp"
            android:layout_height="19dp"
            android:layout_marginStart="16dp"
            android:text="26/03/24"
            android:textSize="10sp"
            card_view:layout_constraintStart_toEndOf="@+id/tv_nama_grup2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="8dp" />

        <ImageView
            android:id="@+id/img_gambar_grup2"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:contentDescription="Deskripsi Gambar"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_grup"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.461"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/tv_nama_grup2"
            android:layout_width="235dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/img_gambar_grup2"
            android:text="Analyst Team"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.225"
            card_view:layout_constraintStart_toEndOf="@+id/img_gambar_grup2"
            card_view:layout_constraintTop_toTopOf="@+id/img_gambar_grup2" />

        <TextView
            android:id="@+id/tv_pesan_grup2"
            android:layout_width="231dp"
            android:layout_height="21dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/pesan"
            android:textColor="@color/abu"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/img_gambar_grup2"
            card_view:layout_constraintEnd_toEndOf="@+id/tv_nama_grup2"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/tv_nama_grup2"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_nama_grup2"
            card_view:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
