<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    card_view:cardElevation="0dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rv_whatsapp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:padding="4dp">

        <ImageView
            android:id="@+id/imageGambar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profil_status"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="210dp"
            android:layout_height="19dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/imageGambar"
            android:text="@string/nama"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.077"
            card_view:layout_constraintStart_toEndOf="@+id/imageGambar"
            card_view:layout_constraintTop_toTopOf="@+id/imageGambar"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/tv_jam"
            android:layout_width="213dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/jam"
            android:textColor="@color/abu"
            android:textSize="11sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/imageGambar"
            card_view:layout_constraintEnd_toEndOf="@+id/tv_nama"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/tv_nama"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_nama"
            card_view:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>